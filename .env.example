# =============================================================================
# Database (PostgreSQL)
# =============================================================================

# Database name
POSTGRES_DB=tutors

# Database user
POSTGRES_USER=tutors

# Database password (change in production!)
POSTGRES_PASSWORD=secret

# Full database URL for Django
DATABASE_URL=postgresql://tutors:secret@db:5432/tutors

# =============================================================================
# Redis
# =============================================================================

# Redis URL for caching, Channels, and Celery
REDIS_URL=redis://redis:6379/0

# =============================================================================
# Django
# =============================================================================

# Secret key for cryptographic signing (CHANGE IN PRODUCTION!)
DJANGO_SECRET_KEY=change-me-in-production-use-strong-random-key

# Debug mode (set to false in production)
DJANGO_DEBUG=true

# Comma-separated list of allowed hosts
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# Frontend (Next.js)
# =============================================================================

# Backend API URL for frontend
NEXT_PUBLIC_API_URL=http://localhost:8000/api

# =============================================================================
# MinIO (S3-compatible storage)
# =============================================================================

# MinIO endpoint URL
MINIO_ENDPOINT=http://minio:9000

# MinIO root user
MINIO_ROOT_USER=minioadmin

# MinIO root password
MINIO_ROOT_PASSWORD=minioadmin

# MinIO access key (for S3 API)
MINIO_ACCESS_KEY=minioadmin

# MinIO secret key (for S3 API)
MINIO_SECRET_KEY=minioadmin

# MinIO bucket name
MINIO_BUCKET=tutors-media

# Public URL for accessing files
MINIO_PUBLIC_URL=http://localhost:9000

# =============================================================================
# OpenSearch
# =============================================================================

# OpenSearch host URL
OPENSEARCH_HOST=http://opensearch:9200

# =============================================================================
# Celery
# =============================================================================

# Celery broker URL (using Redis)
CELERY_BROKER_URL=redis://redis:6379/1

# Celery result backend
CELERY_RESULT_BACKEND=redis://redis:6379/1

# =============================================================================
# Feature Flags (Unleash)
# =============================================================================

# Unleash server URL
UNLEASH_URL=http://unleash:4242/api

# Unleash API token (get from Unleash admin UI)
UNLEASH_API_TOKEN=

# Frontend Unleash proxy URL
NEXT_PUBLIC_UNLEASH_URL=http://localhost:4242/api/frontend

# Frontend Unleash client key
NEXT_PUBLIC_UNLEASH_CLIENT_KEY=

# =============================================================================
# OpenAI (for semantic search - optional)
# =============================================================================

# OpenAI API key (leave empty to use mock mode)
OPENAI_API_KEY=

# Use mock embeddings instead of OpenAI
MOCK_OPENAI=true

# =============================================================================
# Email (for development)
# =============================================================================

# Email backend (console for development)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# =============================================================================
# CORS
# =============================================================================

# Comma-separated list of allowed CORS origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# Authentication (OAuth)
# =============================================================================

# Google OAuth (https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth (https://github.com/settings/developers)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Auth.js secret (generate with: openssl rand -base64 32)
AUTH_SECRET=

# Internal API URL for server-side requests in Docker
INTERNAL_API_URL=http://backend:8000
